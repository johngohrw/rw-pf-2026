---
import { HeroText } from "@components/HeroText";
import { Brand } from "../components/Brand";
import { ReactComponent } from "../components/ReactComponent";
import Layout from "../layouts/Layout.astro";

import MediaBoxes from "@components/MediaBoxes.astro";
import ScrollSmootherWrapper from "@components/ScrollSmootherWrapper.astro";
---

<Layout>
  <div class="overlay">
    <div class="overlay-content">
      <Brand client:only />
      <HeroText client:only />
    </div>
  </div>
  <div style={{ zIndex: 0 }}>
    <ScrollSmootherWrapper>
      <div class="frame">
        <MediaBoxes />
      </div>
      <div class="frame centered-frame">
        <div class="cta">
          <h1>Contact</h1>
          <div class="links">
            <a href="mailto:johngohrw@gmail.com">Email</a>•
            <a href="https://www.linkedin.com/in/rengwu">LinkedIn</a>•
            <a href="http://t.me/jongowe">Telegram</a>
          </div>
          <div class="links">
            <s title="not ready">Resume</s>•
            <a href="https://leetcode.com/rengwu/">LeetCode</a>•
            <a href="https://github.com/johngohrw">GitHub</a>
          </div>
        </div>
      </div>
    </ScrollSmootherWrapper>
  </div>
</Layout>
<style>
  .overlay {
    position: fixed;
    top: 0;
    width: 100svw;
    height: 100svh;
    z-index: 100;
    mix-blend-mode: difference;
    filter: invert(1);
    pointer-events: none;
  }
  .overlay-content {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .frame {
    height: 100vh;
    width: 100vw;
    position: relative;
    z-index: 1;
  }

  .centered-frame {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .cta {
    padding: 2rem;
    text-align: center;
  }

  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;

    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .cta a,
  .cta s {
    font-size: 1.2rem;
    text-wrap: nowrap;
  }
</style>
